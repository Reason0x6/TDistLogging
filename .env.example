# Environment variables for Docker Compose

# Django admin password for create_admin.py script
DJANGO_ADMIN_PASSWORD=your_secure_password_here

# Timezone for the application (default: Australia/Sydney)
# See https://en.wikipedia.org/wiki/List_of_tz_database_time_zones for valid values
TZ=Australia/Sydney

# Prevent Python from writing .pyc files and __pycache__ directories
PYTHONDONTWRITEBYTECODE=1
